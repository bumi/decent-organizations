.bComments
  %h4.bComments-Title= "#{post.comments.size} Comments"
  = render 'comments_form', post: post
  - post.comments.each do |comment|
    .aComment
      %span.aComment-Name= comment.name.present? ? comment.name : "anonymous"
      = simple_format(auto_link(comment.text), class: 'aComment-Body')
      %span.aComment-Meta= "#{time_ago_in_words(comment.created_at)} ago"
