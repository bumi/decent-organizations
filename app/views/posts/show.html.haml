.grid-container
  .grid-x
    .cell.small-12.medium-9
      .a-post
        .grid-x
          .cell.small-2
            .a-post-votes
              %span= @post.upvotes
              %span upvotes
          .cell.small-10
            .a-post-content
              %small= @post.categories.map(&:name).join(", ")
              %h3= @post.title
              %p= @post.description
              %a{href: @post.url}= @post.url

      .a-comments
        .a-comments-title
          %h4 Opinions
        - @post.comments.each do |comment|
          .a-comment
            %p= comment.text
            %small= comment.created_at
